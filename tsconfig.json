{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/",
    "paths": {
      "@src/*": ["./src/*"],
      "@types": ["./types/index.ts"]
    },
    "target": "esnext"
  },
  "exclude": ["node_modules/", "dist/"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
